<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="@dimen/margin_medium">

    <com.android.volley.toolbox.NetworkImageView
            android:layout_width="@dimen/userlist_icon_size"
            android:layout_height="@dimen/userlist_icon_size"
            android:layout_alignParentTop="true"
            android:id="@+id/image_avatar" android:src="@android:color/darker_gray"
            android:layout_marginRight="@dimen/margin_medium"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/text_name"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/image_avatar"/>
</RelativeLayout>
